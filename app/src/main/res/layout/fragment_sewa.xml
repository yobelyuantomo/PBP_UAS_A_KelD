<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SewaFragment">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorYellow"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:padding="0dp"
            android:id="@+id/account_settings_corner"
            android:src="@drawable/account_circle"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorYellow"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/colorYellow"
            android:tint="@color/textColor2"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sewa Mobil"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="15dp"
                android:textColor="@color/textColor2"
                android:textSize="20dp"/>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_car_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/adapter_carlist"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/faBtn_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/wishlist"
            android:tint="#e61920"
            app:maxImageSize="30dp"
            android:backgroundTint="@color/colorYellow"
            app:elevation="0dp"
            app:borderWidth="0dp"
            android:elevation="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/faBtn_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:elevation="0dp"
            android:src="@drawable/check"
            app:borderWidth="0dp"
            android:backgroundTint="@color/colorYellow"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/faBtn_wishlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>