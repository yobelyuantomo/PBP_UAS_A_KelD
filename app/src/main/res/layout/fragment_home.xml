<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorYellow"
            android:layout_alignParentTop="true">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="20dp"
                android:text="Home"
                android:textColor="@color/textColor2"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:padding="0dp"
                android:src="@drawable/account_circle"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorYellow"/>

        </com.google.android.material.navigation.NavigationView>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_title_background="@android:color/transparent"
            app:iss_placeholder="@drawable/bg_grey"
            app:iss_error_image="@drawable/bg_grey"
            app:iss_text_align="CENTER"
            app:iss_period="3000"/>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:columnCount="2"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="10dp"
                    android:src="@drawable/fast"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cepat"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center|bottom"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="10dp"
                    android:src="@drawable/safe"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aman"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center|bottom"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="10dp"
                    android:src="@drawable/reliable"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terpercaya"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center|bottom"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="10dp"
                    android:src="@drawable/cheap"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Murah"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center|bottom"/>


            </androidx.cardview.widget.CardView>

        </GridLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:lineHeight="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:text="Anda Puas, Kami Bahagia! \nSewa Mobil Hanya di MoRent!"/>


    </LinearLayout>
</FrameLayout>